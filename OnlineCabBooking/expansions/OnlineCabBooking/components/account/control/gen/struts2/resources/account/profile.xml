  <package name='account-profile-knockout-html' namespace='/account/profile' extends='nsx-default'>
    <action name='data'>
      <result>/jsp/ps2/page.jsp?pageModel=account/profile/profile-io-page-model</result>
    </action>
    <action name='all'>
      <result>/jsp/ps2/page.jsp?pageModel=account/profile/profile-page-model</result>
    </action>

    <!-- @anchor:ko-html-pages:start -->
    <!-- @anchor:ko-html-pages:end -->
  </package>

  <!-- @anchor:packages:start -->
