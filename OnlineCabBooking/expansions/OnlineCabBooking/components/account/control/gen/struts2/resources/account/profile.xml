  <package name='account-profile-json' namespace='/account' extends='nsx-json-default'>

    <action name='profile-detail-json' class='net.democritus.usr.action.ProfileDetailer' method='execute'>
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
      <result name='input' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <action name='profile-delete-json' class='net.democritus.usr.action.ProfileDeleter' method='execute'>
      <interceptor-ref name="jsonCommandStack" />
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <action name='profile-confirm-json' class='net.democritus.usr.action.ProfileEnterer' method='execute'>
      <interceptor-ref name="jsonEntererStack" />
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
      <result name='input' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <action name='profile-saveDetails-json' class='net.democritus.usr.action.ProfileEnterer' method='execute'>
      <interceptor-ref name="jsonEntererStack" />
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
      <result name='input' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <action name='profile-search-json' class='net.democritus.usr.action.ProfileFindAction' method='execute'>
      <interceptor-ref name="jsonFinderStack" />
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
      <result name='input' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <action name='profile-perform-json' class='net.democritus.usr.action.ProfilePerformer' method='execute'>
      <interceptor-ref name="jsonCommandStack" />
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <action name='profile-getProjection-json' class='net.democritus.usr.action.ProfileProjector' method='execute'>
      <result name='success' type='json'>
        <param name='root'>jsonResult</param>
      </result>
    </action>

    <!-- anchor:io-actions:start -->
    <action name='profile-upload-json' class='net.democritus.usr.action.ProfileImporterAction' method='execute'>
        <result name='success' type='json'>
        <param name='noCache'>true</param>
        <param name='root'>jsonResult</param>
      </result>
    </action>
    <!-- anchor:io-actions:end -->

    <!-- @anchor:json-actions:start -->
